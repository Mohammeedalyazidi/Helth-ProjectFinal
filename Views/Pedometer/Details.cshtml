@model List<Helth_ProjectFinal.Models.StepsModel>

<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Records</title>
    <style>
      /* استخدام الخط العربي */
      body {
        font-family: 'Tahoma', sans-serif;
      }
      /* تخصيص العناوين */
      h1 {
        font-size: 36px;
        text-align: center;
        margin-top: 40px;
        margin-bottom: 20px;
      }
      /* تخصيص الجدول */
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 40px;
      }
      th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: center;
      }
      th {
        background-color: #f2f2f2;
        font-weight: bold;
        text-transform: uppercase;
      }
      /* تخصيص الرسالة في حالة عدم وجود سجلات */
      .no-records {
        font-size: 20px;
        text-align: center;
        margin-bottom: 20px;
      }
      /* تخصيص الرابط "Back to List" */
      .back-to-list {
        display: block;
        width: 200px;
        margin: 20px auto 0;
        text-align: center;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 20px;
        font-weight: bold;
        transition: background-color 0.2s ease-in-out;
      }
      .back-to-list:hover {
        background-color: #b2b2b2;
      }
    </style>
  </head>
  <body>
    <h1>All Records</h1>
    <div class="container">
      @if (Model.Any())
      {
        <table>
          <thead>
            <tr>
              <th>تاريخ</th>
              <th>الخطوات</th>
              <th>السعرات الحرارية المحروقة</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var record in Model)
            {
              <tr>
                <td>@record.DateTime</td>
                <td>@record.Steps</td>
                <td>@record.CaloriesBurned</td>
              </tr>
            }
          </tbody>

        </table>

        <!-- إضافة الرابط "Back to List" -->
        <a href="@Url.Action("Steps")" class="back-to-list">الرجوع الى خلف</a>
      }
      else
      {
        <p class="no-records">لا يوجد سجلات.</p>
      }
    </div>
  </body>
</html>
